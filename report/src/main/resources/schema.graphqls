scalar Object
scalar DateTime

schema {
    query: Query
}

type Query {
    getReports(pageable: PageRequest, filters: [FilterCriteria]): Page
}

input Sort {
    direction: String,
    properties: [String]
}

input FilterCriteria {
    key: String!
    value: String!
    operator: String!
}

input PageRequest {
    page: Int!
    size: Int!,
    sort: Sort
}

type Page {
    content: Object
    totalPages: Int
}